{
  "name": "league-of-memes",
  "version": "0.0.1",
  "description": "OBS Widget to make League of Legends streaming even more fun!",
  "author": {
    "name": "Guilherme Schwierske",
    "email": "ghophp@gmail.com",
    "url": "https://github.com/ghophp"
  },
  "contributors": [],
  "private": true,
  "main": "build/app/entry.js",
  "dependencies": {
    "@sentry/electron": "^2.2.0",
    "axios": "^0.21.1",
    "express": "^4.17.1",
    "mixin-deep": "^2.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "sass": "^1.32.5",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "dev": "tsc -p app && yarn copy-widget && concurrently \"cross-env BROWSER=none NODE_ENV=development yarn react:start\" \"wait-on http://localhost:3000/ && electron ./build/app/entry.js\"",
    "react:start": "rescripts start",
    "build": "yarn && rescripts build && tsc -p app && yarn copy-widget && electron-builder",
    "copy-widget": "cp ./public_widget/widget.html ./build/widget.html",
    "postinstall": "electron-builder install-app-deps",
    "format": "prettier --write src/**/*.ts{,x}",
    "lint": "tsc --noEmit && eslint src/**/*.ts{,x}"
  },
  "homepage": "./",
  "build": {
    "appId": "com.league-of-memes",
    "productName": "League of Memes",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraMetadata": {
      "main": "build/app/entry.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.15",
    "@rescripts/rescript-env": "^0.0.12",
    "@types/express": "^4.17.13",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "@types/swagger-ui-dist": "^3.30.0",
    "@types/swagger-ui-react": "^3.35.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "eslint": "^7.18.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "prettier": "^2.2.1",
    "wait-on": "^5.2.1"
  }
}
